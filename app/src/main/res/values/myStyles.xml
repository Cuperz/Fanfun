<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LoginTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/bright_purple</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:color">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="Theme.MaterialComponents.Light">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="CustomTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>